{
  "scripts": {
    "test": "npm run lint && npm run clean && tsc && ava",
    "lint": "tslint -c tslint.json src/*.ts src/**/*.ts test/**/*.ts",
    "clean": "find src test -type f -name '*.js' -exec rm -rf {} \\;",
    "doc": "rm -rf doc && mv test ../_test && typedoc --out doc; mv ../_test test"
  },
  "devDependencies": {
    "@types/node": "^8.0.8",
    "ava": "^0.20.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "typedoc": "^0.7.1",
    "typescript": "^2.4.1"
  }
}
